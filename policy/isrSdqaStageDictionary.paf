#<?cfg paf dictionary ?>
#
# Dictionary for IsrSdqaStage policies
#

target: lsst.sdqa.IsrSdqaStage

definitions: {
    #input clipboard keys
    inputKeys: {
        type: "policy"
        dictionary: {
            definitions: {
                exposureKey: {
                    type: "string"
                    description: "Name of clipboard keyword for exposure."
                    minOccurs: 1
                    maxOccurs: 1
                    default: "isrExposure"
                }        
            }
        }
        maxOccurs: 1        
    }
    
    #output clipboard keys:
    outputKeys: {
        type: "policy"
        dictionary: {
            definitions: {
                isrPersistableSdqaRatingVectorKey: {
                    type: "string"
                    description: "Name of clipboard keyword for persistable SDQA rating vector for IRS pipeline."
                    maxOccurs: 1
                    default: "isrPersistableSdqaRatingVector"
                }
            }
        }
        maxOccurs: 1
    }

    parameters: {
        type: policy
        dictionary: {
            target: Parameters
            definitions: {
                sdqaRatingScope: {
                    type: int
                    default: 0
                    minOccurs: 1
                    maxOccurs: 1
                    allowed: {
                        min: 0
                        max: 3
                    }
                    description:  "The scope of the set of SDQA ratings 
                                   associated with this stage instance:
                                   0=AMP, 1=CCD, 2=FPA, 3=FOOTPRINT"
                }
                sdqaMetricNames: {
                    type: "string"
                    description: "Array of metadata-keyword names for SDQA ratings."
                    minOccurs: 1
                    default: 'overscanMean' 'overscanMedian' 'overscanStdDev' 
                }
            }
        }
    }
}
